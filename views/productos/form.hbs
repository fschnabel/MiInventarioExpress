<h1>{{#if item.id}}Editar producto{{else}}Nuevo producto{{/if}}</h1>

<form action="{{#if item.id}}/v/productos/{{item.id}}/editar{{else}}/v/productos/nuevo{{/if}}"
      method="post" enctype="multipart/form-data">

  {{> _alertas}}

  <div class="field">
    <label for="nombre">Nombre</label>
    <input id="nombre" name="nombre"
           value="{{#if old}}{{old.nombre}}{{else}}{{item.nombre}}{{/if}}"
           required>
  </div>

  <div class="field">
    <label for="precio">Precio</label>
    <input id="precio" name="precio" type="number" step="0.01" min="0"
           value="{{#if old}}{{old.precio}}{{else}}{{item.precio}}{{/if}}"
           required>
  </div>

  <div class="field">
    <label for="descripcion">Descripci√≥n</label>
    <textarea id="descripcion" name="descripcion">{{#if old}}{{old.descripcion}}{{else}}{{item.descripcion}}{{/if}}</textarea>
  </div>

  <div class="field">
    <label for="imagen">Imagen</label>
    {{#if item.imagen}}
      <div style="margin-bottom:.4rem">
        <img src="{{item.imagen}}" width="96" alt="imagen actual">
      </div>
    {{/if}}
    <input id="imagen" name="imagen" type="file" accept="image/*">
  </div>

  <div class="actions">
    <button>{{#if item.id}}Actualizar{{else}}Crear{{/if}}</button>
    <a href="/v/productos">Cancelar</a>
  </div>
</form>
