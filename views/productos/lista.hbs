<h1>Productos</h1>

<a href="/v/productos/nuevo">âž• Nuevo producto</a>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>

 
  <tbody>
  {{#each items}}

    <tr>
      <td>
        {{#if imagen}}
          <img src="{{imagen}}" width="60">
        {{else}}
          <em>Sin imagen</em>
        {{/if}}
      </td>

      <td>{{nombre}}</td>

      <td>$ {{precio}}</td>

      <td>
        <a href="/v/productos/{{id}}/editar">Editar</a>
        <form action="/v/productos/{{id}}/eliminar" method="post" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>

  {{/each}}
  </tbody>
</table>
